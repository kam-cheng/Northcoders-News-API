{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "POST /api/topics": {
    "description": "adds topic to database and serves the topic",
    "queries": [],
    "exampleSendBody": {
      "slug": "Jim",
      "description": "Not David"
    },
    "exampleResponse": {
      "topic": {
        "slug": "Jim",
        "description": "Not David"
      }
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [{ "username": "person1" }]
    }
  },
  "GET /api/users/:username": {
    "description": "serves one object of matching username",
    "queries": [],
    "exampleResponse": {
      "user": {
        "username": "person1",
        "name": "Jim",
        "avatar_url": "https:www.username.com/Jim.jpg"
      }
    }
  },
  "GET /api/articles": {
    "description": "serves an array of matching articles",
    "queries": ["topic", "sort_by", "order", "limit", "p"],
    "defaultValues": {
      "sort_by": "created_at",
      "order": "desc",
      "limit": 10,
      "p": 1
    },
    "sort_byGreenList": [
      "author",
      "title",
      "article_id",
      "topic",
      "created_at",
      "votes",
      "comment_count"
    ],
    "orderGreenList": ["asc", "desc"],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 123,
          "topic": "cooking",
          "created_at": 1527695953341,
          "votes": 123,
          "comment_count": 2
        }
      ],
      "total_count": 12
    }
  },
  "POST /api/articles": {
    "description": "adds article to database and serves the article",
    "queries": [],
    "exampleSendBody": {
      "author": "Jim",
      "title": "TitleOfArticle",
      "body": "BodyOfArticle",
      "Topic": "Topic"
    },
    "exampleResponse": {
      "article": {
        "author": "Jim",
        "title": "TitleOfArticle",
        "body": "BodyOfArticle",
        "Topic": "Topic",
        "article_id": 1,
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 0,
        "comment_count": 0
      }
    }
  },

  "GET /api/articles/:article_id": {
    "description": "serves one article based on matching article_id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 123,
        "topic": "cooking",
        "created_at": 1527695953341,
        "votes": 123,
        "body": "example body",
        "comment_count": 1
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates matching article vote count and serves updated article",
    "queries": [],
    "exampleSendBody": { "inc_votes": 1 },
    "exampleResponse": {
      "author": "Jim",
      "title": "Adventures of Jim",
      "article_id": 1,
      "topic": "fred",
      "created_at": "2020-07-09T20:11:00.000Z",
      "votes": 101,
      "body": "great article"
    }
  },
  "DELETE /api/articles/:article_id": {
    "description": "deletes article and all comments matching article_id",
    "queries": [],
    "exampleResponse": {}
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments matching article_id",
    "queries": ["limit", "p"],
    "defaultValues": {
      "limit": 10,
      "p": 1
    },
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 123,
          "votes": 324,
          "created_at": "2020-07-09T20:11:00.000Z",
          "author": "Jim",
          "body": "this is my comment"
        }
      ],
      "total_count": 12
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes comment matching comment_id",
    "queries": [],
    "exampleResponse": {}
  },

  "PATCH /api/comments/:comment_id": {
    "description": "updates matching comment vote count and serves updated comment",
    "queries": [],
    "exampleSendBody": { "inc_votes": 1 },
    "exampleResponse": {
      "comment_id": 10,
      "body": "great comment",
      "votes": 21,
      "author": "Jim",
      "article_id": 3,
      "created_at": "2020-04-06T12:17:00.000Z"
    }
  },

  "POST /api/articles/:article_id/comments": {
    "description": "add comment to database for matching article_id",
    "queries": [],
    "exampleSendBody": { "username": "Jim", "body": "user comment" },
    "exampleResponse": {
      "comment": {
        "comment_id": 20,
        "body": "user comment",
        "votes": 0,
        "author": "Jim",
        "article_id": 1,
        "created_at": "2020-07-09T20:11:00.000Z"
      }
    }
  }
}
