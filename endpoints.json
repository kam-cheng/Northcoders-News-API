{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [{ "username": "person1" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all or matching articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "defaultValues": { "sort_by": "created_at", "order": "desc" },
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 123,
          "topic": "cooking",
          "created_at": 1527695953341,
          "votes": 123
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves one article based on matching article_id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 123,
        "topic": "cooking",
        "created_at": 1527695953341,
        "votes": 123,
        "body": "example body"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates matching article vote count and serves updated article",
    "queries": [],
    "exampleSendBody": { "inc_votes": 1 },
    "exampleResponse": {
      "author": "butter_bridge",
      "title": "Living in the shadow of a great man",
      "article_id": 1,
      "topic": "mitch",
      "created_at": "2020-07-09T20:11:00.000Z",
      "votes": 101,
      "body": "I find this existence challenging"
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments matching article_id",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 123,
          "votes": 324,
          "created_at": "2020-07-09T20:11:00.000Z",
          "author": "Jim",
          "body": "this is my comment"
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes comment matching comment_id",
    "queries": [],
    "exampleResponse": "undefined"
  }
}
